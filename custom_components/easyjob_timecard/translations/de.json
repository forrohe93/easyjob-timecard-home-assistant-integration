{
  "title": "easyjob Timecard",

  "config": {
    "step": {
      "user": {
        "title": "easyjob Timecard einrichten",
        "description": "Gib deine easyjob Verbindungsdaten ein.",
        "data": {
          "base_url": "easyjob URL",
          "username": "Benutzername",
          "password": "Kennwort",
          "verify_ssl": "SSL-Zertifikat prüfen"
        },
        "data_description": {
          "base_url": "Format: https://easyjob.example.com"
        }
      },
      "status": {
        "title": "Status-Sensoren",
        "description": "Wähle Ressourcenstati aus, für die Binärsensoren erstellt werden sollen.",
        "data": {
          "status_binary_sensors": "Ressourcenstati für Binärsensoren"
        },
        "data_description": {
          "status_binary_sensors": "Für jeden ausgewählten Status wird ein Binärsensor angelegt. Der Sensor ist \"Ein\", wenn der Status im Ressourcenplan aktuell aktiv ist."
        }
      }
    },
    "error": {
      "invalid_auth": "Login fehlgeschlagen. Bitte URL/Benutzer/Kennwort prüfen.",
      "auth_failed": "Login fehlgeschlagen. Bitte URL/Benutzer/Kennwort prüfen.",
      "not_timecard_user": "Der Benutzer ist kein Timecard-User.",
      "unknown": "Unbekannter Fehler. Bitte Protokolle prüfen."
    }
  },

  "options": {
    "step": {
      "init": {
        "title": "easyjob Timecard Einstellungen",
        "description": "Passe deine Verbindungseinstellungen und Status-Sensoren an.",
        "data": {
          "base_url": "easyjob URL",
          "username": "Benutzername",
          "password": "Kennwort",
          "verify_ssl": "SSL-Zertifikat prüfen",
          "status_binary_sensors": "Ressourcenstati für Binärsensoren"
        },
        "data_description": {
          "base_url": "Format: https://easyjob.example.com",
          "status_binary_sensors": "Für jeden ausgewählten Status wird ein Binärsensor angelegt. Der Sensor ist \"Ein\", wenn der Status im Ressourcenplan aktuell aktiv ist."
        }
      }
    }
  },

  "entity": {
    "sensor": {
      "holidays": { "name": "Urlaubstage" },
      "total_work_minutes": { "name": "Gesamtarbeitsminuten" },
      "work_minutes": { "name": "Arbeitsminuten" },
      "work_minutes_planed": { "name": "Geplante Arbeitsminuten" },
      "work_time": { "name": "Arbeitszeit" }
    },
    "binary_sensor": {
      "connected": { "name": "Verbindung" },
      "worktime_active": { "name": "Zeiterfassung aktiv" },
      "status_active": { "name": "Status aktiv: {caption}" }
    },
    "button": {
      "start": { "name": "Start" },
      "stop": { "name": "Stop" }
    },
    "switch": {
      "worktime": { "name": "Zeiterfassung" }
    },
    "select": {
      "resource_state_type": { "name": "Ressourcenstatus" }
    },
    "calendar": {
      "resourceplan": { "name": "Ressourcenplan" }
    }
  },

  "services": {
    "set_resource_state": {
      "name": "Ressourcenstatus eintragen",
      "description": "Erstellt einen Ressourcenstatus-Eintrag (z.B. Urlaub, Krank, Mobile Office).",
      "fields": {
        "device_id": {
          "name": "Gerät",
          "description": "Das easyjob-Gerät (pro Benutzer/Account)."
        },
        "start": { "name": "Start" },
        "end": { "name": "Ende" }
      }
    }
  }
}
